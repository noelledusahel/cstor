<!DOCTYPE html>
<html>
<head>
  <title>Cstor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"

</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand"> CSTOR </a>
      </div>
      <ul class="nav navbar-nav">

        <li><a><%= link_to "Home", resources_path %></a></li>
        <% if logged_in? %>
        <li><a><%= link_to "Logout", session_path(current_user.id), method: :delete %></a></li>
        <li><a><%= link_to "My Profile", user_path(current_user.id)%></a></li>
        <li><a>Signed in as <%=  current_user.username %></a></li>
        <% end %>
      </ul>

      <% if !logged_in? %>
      <ul class="nav navbar-nav navbar-right">
       <li><a><span class="glyphicon glyphicon-user"></span><%= link_to "Register", new_user_path %></a></li>
        <li><a><span class="glyphicon glyphicon-log-in"></span> <%= link_to "Log In", new_session_path %></a></li>
      </ul>
       <% end %>
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </body>
  </html>
