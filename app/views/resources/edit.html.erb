<%=form_for @resource do |f| %>
<%= render partial: '/users/errors' %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p> <%=f.label :abstract%><br>
  <%= f.text_area :abstract %>
</p>

<p>
<%= f.label :url %><br>
<%= f.text_field :url %>
</p>

<p>
  <%= f.check_box :teacher_only %>
  <%= f.label :teacher_only, "Teachers Only" %>
</p>

<p>
<%= f.label :tags %> <small>(separate by commas)</small> <br>
<input id="resource_tag" name="resource[tag]" value="<%= @tags_string %>">
</p>

<p>
<%= f.submit %>
</p>
<% end %>
